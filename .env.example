# Backend environment variables for Spice Central
# Copy this file to `.env` and fill values as needed.

# Port the Express server will listen on
PORT=8080

# MongoDB connection string
# Example: mongodb://localhost:27017/spiceCentral
MONGODB_URI=mongodb://localhost:27017/spiceCentral

# Directory (relative to backend/) where uploaded files will be stored and served
# Do NOT include a leading slash. Default: uploads
UPLOADS_DIR=uploads
